<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue">

    <TextView
        android:id="@+id/tvWhere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvRecycle"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="50dp"
        android:fontFamily="@font/poppins_medium"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="157dp"
        tools:layout_editor_absoluteY="120dp"
        tools:text="Recycling Bin" />

    <TextView
        android:id="@+id/tvRecycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvItem"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="50dp"
        android:fontFamily="@font/poppins_medium"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="157dp"
        tools:layout_editor_absoluteY="120dp"
        tools:text="Is Recyclable" />

    <TextView
        android:id="@+id/tvItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="50dp"
        android:fontFamily="@font/poppins_medium"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="157dp"
        tools:layout_editor_absoluteY="120dp"
        tools:text="Water Bottle" />

    <ImageButton
        android:id="@+id/btnReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvWhere"
        android:layout_alignStart="@+id/tvWhere"
        android:layout_alignEnd="@+id/tvWhere"
        android:layout_marginStart="130dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="130dp"
        android:backgroundTint="#00FFFFFF"
        android:scaleX="3"
        android:scaleY="3"
        app:srcCompat="@drawable/baseline_home_24" />
</RelativeLayout>